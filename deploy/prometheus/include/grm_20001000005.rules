groups:
- name: 系统开启
  rules:
  - alert: 系统开启开关预警
    annotations:
      alert_level: info
      alert_type: binary_state
      description: 开关打开后触发
      duration: 5s
      module_id: 200010000005
      state: 1
      var_name: 系统开启
    expr: grm_20001000005_gauge{name='系统开启'} == 1
    for: 5s
    labels:
      severity: info
- name: 冷库温度
  rules:
  - alert: 冷库温度预警
    annotations:
      alert_level: critical
      alert_type: hight_limit
      description: 监测冷库温度是否超标
      duration: 30s
      module_id: 200010000005
      threshold: -17.0
      var_name: 冷库温度
    expr: grm_20001000005_gauge{name='冷库温度'} > -17.0
    for: 30s
    labels:
      severity: critical
- name: 设定温度
  rules:
  - alert: 设定温度过低预警
    annotations:
      alert_level: warning
      alert_type: hight_limit
      description: 设定温度过低
      duration: 0s
      module_id: 200010000005
      threshold: 2
      var_name: 设定温度
    expr: grm_20001000005_gauge{name='设定温度'} < 2
    for: 0s
    labels:
      severity: warning
- name: 设定温度'
  rules:
  - alert: 设定温度过低预警
    annotations: {}
    expr: ''
    for: 10s
    labels: {}
